<%-include("boiler/header")%>
<%-include("boiler/nav")%>
<style>
*{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
html,body{
  width: 100%;
  height: 100%;
}
.main{
    width: 100%;
    height: 90vh;
    background-color: #02a25f;
    display: flex;
    justify-content: center;
    align-items: center;
}
.box{
    width: 30vw;
    height: 60vh;
    background-color: #02a25f;
    box-shadow: 10px 10px 10px 10px #0f8b57;
    border-radius: 10px;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}
h2{
    margin-bottom: 2vh;
    margin-left: 8vw;
    color: whitesmoke;
}
input{
    padding: 1.5vw 4vw;
    border-radius: 10px;
    border: none;
    margin: 2vh 0;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    font-size: 1.3vw;
    margin-left: 5vw;
}
input::placeholder {
  color: black;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  font-size: 1.3vw;
}
button{
    padding: 1.2vw 4vw;
    border-radius: 10px;
    background-color: #02a25f;
    color: white;
    margin-left: 8vw;
}
button:hover{
    cursor: pointer;
    background: #095539;
}
</style>
<div class="main">
    
    <div class="box">
        <form action="/expenses" method="post">
            <h2>ADD EXPENSES</h2>
        <input type="number" name="amount" placeholder="Enter amount">
        <input type="text" name="remark" placeholder="Remark">
        <input type="text" name="category" placeholder="category">
        
            <button>Add expenses</button>
            </form>
    </div>
</div>
            


<%-include("boiler/footer")%>