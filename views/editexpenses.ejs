<%-include("boiler/header")%>
<style>
*{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
html,body{
  width: 100%;
  height: 100%;
}
.main{
    width: 100%;
    height: 100vh;
    background-color: #01c372;
    display: flex;
    justify-content: center;
    align-items: center;
}
.box{
    width: 30vw;
    height: 60vh;
    background-color: #02a25f;
    box-shadow: 10px 10px 10px 10px #0f8b57;
    border-radius: 10px;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}
h2{
    margin-bottom: 2vh;
    color: white;
    margin-left: 8vw;
}
input{
    padding: 1.5vw 4vw;
    border-radius: 10px;
    border: none;
    margin: 2vh 0;
    margin-left: 5vw;
}
button{
    padding: 1.2vw 4vw;
    border-radius: 10px;
    background-color: #02a25f;
    color: white;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    margin-left: 8vw;
}
button:hover{
    cursor: pointer;
    background: #095539;
    border: none;
}
</style>
<div class="main">
    
    <div class="box">
        <form action="/editexpenses/<%=edit._id%>" method="post">
            <h2>EDIT EXPENSES</h2>
        <input type="number" value="<%=edit.amount%>" name="amount" placeholder="Enter amount">
        <input type="text" value="<%=edit.remark%>" name="remark" placeholder="Remark">
        <input type="text" value="<%=edit.category%>" name="category" placeholder="category">
        
            <button>Save expenses</button>
            </form>
    </div>
</div>
            


<%-include("boiler/footer")%>
