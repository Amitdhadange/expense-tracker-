<%-include("boiler/header")%>

<style>
*{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
html,body{
  width: 100%;
  height: 100%;
}
.main{
    width: 100%;
    height: 100vh;
    background-image: url(https://use.expensify.com/assets/img/bg_homepage-hero--darker.png);
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    display: flex;
    justify-content: center;
    align-items: center;
}
.box{
    width: 30vw;
    height: 60vh;
    background-color: #02a25f;
    box-shadow: 10px 10px 10px 10px #0f8b57;
    border-radius: 10px;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}
h2{
    margin-bottom: 2vh;
    color: whitesmoke;
    font-size: 2vw;
    letter-spacing: .1vw;
    display: flex;
    margin-left: 1vw;
}
input{
    padding: 1.5vw 4vw;
    border-radius: 10px;
    border: none;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    font-size: 1.3vw;
    margin: 2vh 0;
}
button{
    padding: 1.2vw 4vw;
    border-radius: 10px;
    border-radius: 10px;
    background-color: #02a25f;
    color: white;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    margin-left: 5vw;
    font-size: 1.3vw
}
button:hover{
    cursor: pointer;
    background: #095539;
    border: none;
}

</style>
<div class="main">
    
    <div class="box">
        <h2>Please enter the  OTP</h2>
        <form action="/otp/<%=email%>" method="post">
            
            <input type="number" name="otp" placeholder="Enter otp">
            <br><br>
            <button>Verify</button>
            </form>
    </div>
</div>
            


<%-include("boiler/footer")%>