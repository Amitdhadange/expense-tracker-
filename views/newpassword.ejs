<%-include("boiler/header")%>
<style>
*{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
html,body{
  width: 100%;
  height: 100%;
}
.main{
    width: 100%;
    height: 100vh;
    background-color: rgb(255, 178, 178);
    display: flex;
    justify-content: center;
    align-items: center;
}
.box{
    width: 30vw;
    height: 60vh;
    background-color: #de2b2b;
    box-shadow: 10px 10px 10px 10px rgb(209, 101, 101);
    border-radius: 10px;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}
h2{
    margin-bottom: 2vh;
}
input{
    padding: 1.5vw 4vw;
    border-radius: 10px;
    border: none;
    margin: 2vh 0;
    margin-left: 2vw;
}
button{
    padding: 1.2vw 4vw;
    border-radius: 10px;
    background-color: rgb(0, 0, 0);
    color: white;
    margin-left: 5vw;
}

</style>
<div class="main">
    
    <div class="box">
        <h2>THIS IS  Forget password</h2>
        <form action="/newpassword/<%= id%>" method="post">
            
          <input type="password" name="newpassword" placeholder="New password">
            <br><br>
            <input type="password" name="cnfpassword" placeholder="Confirm password">
            <br><br>
            <button>Submit</button>
            </form>
    </div>
</div>
            


<%-include("boiler/footer")%>